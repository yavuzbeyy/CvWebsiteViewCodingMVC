@using MyWebCv.Models.Entity;
@model List<Connection_Table>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                               <a class="nav-link" href="#timeline" data-toggle="tab">Mesajlar</a>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="tab-pane" id="timeline">
                                    <!-- The timeline -->
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        @foreach (var a in Model)
                                        {
                                            <div class="time-label">
                                                <span class="bg-danger">


                                                    @a.Date

                                                </span>
                                            </div>
                                            <!-- /.timeline-label -->
                                            <!-- timeline item -->
                                            <div>
                                                <i class="fas fa-comments bg-warning"></i>
                                                <div class="timeline-item">
                                                    <span class="time"><i class="far fa-clock"></i> @a.Date</span>
                                                    <h3 class="timeline-header"><a href="#">@a.mail</a> sana bir mesaj gönderdi. Konu : @a.Subject</h3>
                                                    <div class="timeline-body">
                                                        
                                                        @a.Message 
                                                    </div>
                                                </div>
                                            </div>}
                                    </div>
                                </div>
                            </div> 
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>

